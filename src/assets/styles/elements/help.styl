@charset "utf-8"

.help
  display: flex
  justify-content flex-start
  align-items: center
  font-size: $fontsize.small
  line-height: $fontsize.small
  color: $color.light
  list-style: none
  margin: 0
  padding: 0

  .button
    position: fixed
    top: 10px
    right: 10px
    min-height: 26px
    cursor: pointer

    &:hover
      color: $color.primary

  .modal
    position: fixed
    top: 30px
    right: 20px

    code
      background-color: $color.light
      color: $color.white

    ul
      list-style: none

      li
        line-height: 2
        text-align: right
