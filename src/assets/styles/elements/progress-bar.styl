@charset "utf-8"

.progress-bar
  position: fixed
  bottom: 0
  left: 0
  right: 0
  height: 11px
  display: block
  width: 100%
  background-color: lighten($color.primary, 40%)
  border-radius: 2px
  overflow: hidden

  .indicator
    position: absolute
    top: 0
    left: 0
    bottom: 0
    background-color: $color.primary
    transition: width .3s linear

  .numbers
    position: absolute
    left: 10px
    top: 1px
    font-size: 8px
    line-height: 8px
    color: $color.white
