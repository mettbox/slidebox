{
  "name": "slidebox",
  "description": "Creating a simple slideshow using Vue with markdown",
  "version": "1.0.0",
  "author": "Maik Mettenheimer <maik@mettbox.de> (http://mettbox.de)",
  "private": true,
  "license": "MIT License",
  "repository": {
    "type": "git",
    "url": "https://github.com/mettbox/slidebox"
  },
  "bugs": {
    "url": "https://github.com/mettbox/slidebox/issues"
  },
  "watch": {
    "generate-content": {
      "patterns": [
        "markdown"
      ],
      "extensions": "md"
    }
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "watch": "npm-watch",
    "generate-presentations": "node generate-presentations",
    "start": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "dependencies": {
    "markdown-it-deflist": "^2.0.3",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-plugin-router": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.2",
    "copy-dir": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^9.4.2",
    "npm-watch": "^0.6.0",
    "prettier": "^1.18.2",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-markdown-loader": "^2.4.1",
    "vue-template-compiler": "^2.5.21"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
